<MudButton
    Variant="Variant.Filled"
    DisableElevation="true"
    Color="Color.Secondary"
    Size="Size.Large"
    Class="mt-8 me-1"
    OnClick="@(async () => await ReverseButtonClicked.InvokeAsync())">
    Отмена
</MudButton>
<MudButton
    ButtonType="ButtonType.Submit"
    Variant="Variant.Filled"
    DisableElevation="true"
    Color="Color.Primary"
    Size="Size.Large"
    Class="mt-8"
    OnClick="@(async () => await SaveButtonClicked.InvokeAsync())">
    Сохранить
</MudButton>

@code {
    
    [Parameter, EditorRequired]
    public EventCallback ReverseButtonClicked { get; set; }
    
    [Parameter, EditorRequired]
    public EventCallback SaveButtonClicked { get; set; }

}