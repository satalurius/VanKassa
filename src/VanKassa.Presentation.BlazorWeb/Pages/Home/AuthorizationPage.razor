@page "/login"

<MudContainer Class="mt-3" MaxWidth="MaxWidth.Small">
    <MudGrid Class="mt-8"
             Justify="Justify.FlexEnd">
        <MudItem xs="12">
            <MudText Typo="Typo.h2">
                Авторизация
            </MudText>

            <MudTextField 
                T="string"
                Placeholder="Логин"
                InputType="InputType.Text"/>

            <MudTextField 
                T="string"
                Placeholder="Пароль"
                InputType="InputType.Password"/>
        </MudItem>

        <MudItem xs="12" Class="d-flex align-center justify-space-between">
            <MudButton Variant="Variant.Filled" Color="Color.Primary" Class="ml-auto">Войти</MudButton>
        </MudItem>
    </MudGrid>

</MudContainer>

